{
    "compilerOptions": {
        "lib": ["es2023"],
        "target": "es2022",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "outDir": "./dist"
    },
    "include": [
        "lib/**/*.ts",
        "lib/*.ts"
    ]
}
